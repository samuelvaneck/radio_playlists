<div class="flex flex-row justify-end my-2">
  <!-- search input -->
  <div class="mr-2">
    <input type="text" class="search-input shadow-md" placeholder="Search"/>
  </div>
  <!-- filter icon -->
  <div class="mr-2">
    <button class="border border-gray-300 rounded-lg p-2 hover:cursor-pointer shadow-md transition transition-duration-300 hover:bg-slate-300">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path class="text-slate-700" stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 01-.659 1.591l-5.432 5.432a2.25 2.25 0 00-.659 1.591v2.927a2.25 2.25 0 01-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 00-.659-1.591L3.659 7.409A2.25 2.25 0 013 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0112 3z" />
      </svg>
    </button>
  </div>
  <!-- view button -->
  <div>
    <% if params[:view] == 'rows' %>
      <!-- tiles -->
      <%= link_to root_path(view: 'tiles'), { class: 'inline-flex items-center px-4 py-2 rounded-md border border-slate-300 shadow-md transition transition-duration-300 hover:bg-slate-300', title: 'tiles' } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path class="text-slate-700" stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
        </svg>
      <% end  %>
    <%- elsif params[:view].blank? || params[:view] == 'tiles' %>
      <!-- rows -->
      <%= link_to root_path(view: 'rows'), { class: 'inline-flex items-center px-4 py-2 rounded-md border border-slate-300 shadow-md transition transition-duration-300 hover:bg-slate-300', title: 'rows' } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path class="text-slate-700" stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zM3.75 12h.007v.008H3.75V12zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm-.375 5.25h.007v.008H3.75v-.008zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
      <% end  %>
    <% end %>
  </div>
</div>
