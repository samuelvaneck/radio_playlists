<div class="flex flex-row my-2">
  <!-- search input -->
  <div class="mr-2 grow">
    <%= form_for songs_path, method: :get, data: { controller: 'search', action: 'input->search#submit' } do %>
        <%= text_field_tag 'search-input', nil, placeholder: 'Search....', class: 'search-input shadow-md' %>
    <% end %>
  </div>
  <!-- filter icon -->
  <div class="mr-2">
    <button data-controller="modal" data-action="click->modal#openModal" class="border border-gray-300 rounded-lg p-2 hover:cursor-pointer shadow-md transition transition-duration-300 hover:bg-slate-300" data-modal-name="filter">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path class="text-slate-700" stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 01-.659 1.591l-5.432 5.432a2.25 2.25 0 00-.659 1.591v2.927a2.25 2.25 0 01-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 00-.659-1.591L3.659 7.409A2.25 2.25 0 013 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0112 3z" />
      </svg>
    </button>
  </div>
  <!-- view button -->
  <%= render partial: 'home/view_buttons/view_button' %>
</div>
<div id='loader'>
  <div id="loader-bar"></div>
</div>
