<div id="graph-modal-content" class="hidden modal-content">
  <!-- graph title -->
  <div class="sm:flex sm:items-start" id="graph-title"></div>
  <!-- graph buttons -->
  <div class="flex sm:items-start mt-2">
    <button id="graph-btn-day" class="grow graph-button" data-controller="modal" data-action="click->modal#reRenderChart" data-modal-time-param="day">Day</button>
    <button id="graph-btn-week" class="grow graph-button button-active" data-controller="modal" data-action="click->modal#reRenderChart" data-modal-time-param="week">Week</button>
    <button id="graph-btn-month" class="grow graph-button" data-controller="modal" data-action="click->modal#reRenderChart" data-modal-time-param="month">Month</button>
    <button id="graph-btn-year" class="grow graph-button" data-controller="modal" data-action="click->modal#reRenderChart" data-modal-time-param="year">Year</button>
    <button id="graph-btn-all" class="grow graph-button" data-controller="modal" data-action="click->modal#reRenderChart" data-modal-time-param="all">All</button>
  </div>
  <!-- graph -->
  <div class="sm:flex sm:items-start mt-2">
    <div class='flex flex-col'>
      <div id="graph">
        <svg width="100%" height="100%"></svg>
      </div>
      <div id="legend">
        <svg width="100%" height="100%"></svg>
      </div>
    </div>
  </div>
</div>
